<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Secure Note - Home</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>

<div class="home-container">

  <!-- Sidebar -->
  <div class="sidebar">
    <h2>Secure Note</h2>
    <button class="sidebar-btn active" onclick="showPage('mynotes', this)">My Notes</button>
    <button class="sidebar-btn" onclick="showPage('addnote', this)">Add Note</button>
    <button class="sidebar-btn" onclick="showPage('deletenote', this)">Delete Note</button>
  </div>

  <!-- Main content -->
  <div class="main-content">

    <!-- My Notes Page -->
    <div id="mynotes" class="page">
      <h2>My Notes</h2>
      <% if (notes && notes.length > 0) { %>
        <ul>
          <% notes.forEach(note => { %>
            <li>
              <h3><%= note.title %></h3>
              <p><%= note.content %></p>
              <small>
                Created: <%= note.createdAt.toDateString() %><br>
                Slug: <%= note.slug %><br>
                ID: <%= note._id %>
              </small>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <p>No notes yet.</p>
      <% } %>
    </div>

    <!-- Add Note Page -->
    <div id="addnote" class="page" style="display:none;">
      <h2>Add Note</h2>
      <form id = "save_content" class="add-note-form">
        <input type="text" name="title" placeholder="Title" required class="note-title">
        <textarea name="content" placeholder="Your note..." required class="note-content"></textarea>
        <button type="submit" class="save-note-btn">Save</button>
      </form>
    </div>

    <!-- Delete Note Page -->
    <div id="deletenote" class="page" style="display:none;">
      <h2>Delete Note</h2>
      <% if (notes && notes.length > 0) { %>
  <ul class="delete-note-list">
    <% notes.forEach(note => { %>
      <li>
        <h3><%= note.title %></h3>
        <p><%= note.content %></p>
        <form class="delete-note-form" data-slug="<%= note.slug%>">
          <button type="submit" class="delete-note-btn">Delete</button>
        </form>
      </li>
    <% }) %>
  </ul>
<% } else { %>
  <p>No notes to delete.</p>
<% } %>

    </div>
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src = '/js/home.js'></script>
</body>
</html>
